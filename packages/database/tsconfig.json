{
   "compilerOptions": {
      "baseUrl": "src",
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es2018",
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "declaration": true,
      "moduleResolution": "node",
      "outDir": "./lib",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "skipLibCheck": true
   }
}
