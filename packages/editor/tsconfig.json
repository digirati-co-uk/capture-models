{
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": false
  },
  "exclude": [
    "**/*.stories.tsx",
    "**/*.test.ts"
  ],
  "references": [
    { "path": "../types" },
    { "path": "../plugin-api" }
  ]
}
