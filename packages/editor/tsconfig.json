{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*",
    "../../fixtures/**/*"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "noEmitOnError": false,
    "declarationDir": "lib",
    "sourceMap": false,
    "declarationMap": false
  },
  // Dependencies must be declared in references.
  "references": [
    { "path": "../types" },
    { "path": "../plugin-api" }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "**/*.stories.tsx"
  ]
}
