{
  "extends": "../../tsconfig.json",
  "include": [
    "src/**/*",
    "../../fixtures/**/*"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "noEmitOnError": false,
    "declarationDir": "lib",
    "sourceMap": false,
    "declarationMap": false
  },
  // Dependencies must be declared in references.
  "references": [
    { "path": "../types" },
    { "path": "../plugin-api" },
    { "path": "../helpers" }
  ],
  "exclude": [
    "src/stores/revisions/utility",
    "src/utility",
    "node_modules",
    "dist",
    "lib",
    "**/*.stories.tsx",
    "**/*.test.ts"
  ]
}
